<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#e2eef5"
    android:gravity="top">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/lvl5text"
        android:id="@+id/textView55"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_marginTop="0dp"
        android:background="#0b99f2"
        android:textAlignment="gravity" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="25dp"
        android:weightSum="1"
        android:layout_weight="0.08"
        android:gravity="fill_vertical|right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/crunchtxt"
            android:id="@+id/textView65"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:layout_weight="0.93"
            android:gravity="left|center_vertical|fill_vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:id="@+id/btnscore"
            android:layout_marginRight="0dp"
            android:onClick="OnScoreButton"
            android:clickable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLOSE"
            android:id="@+id/btnClose5"
            android:layout_marginTop="0dp" />
    </LinearLayout>

    <TextView
        android:layout_width="345dp"
        android:layout_height="63dp"
        android:id="@+id/Level5Text"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginRight="10dp" />

    <EditText
        android:id="@+id/Level5UserAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="15dp"
        android:textColor="#030303"
        android:textSize="18dp"
        android:hint="@string/answer_hint"
        android:layout_weight="0.05" />

</LinearLayout>